{
  "rewrites": [
    {
      "source": "/((?!api|data|favicon.ico|apple-touch-icon.png|placeholder.svg|robots.txt|sitemap.xml|og-image.jpg|llms.txt|llms-full.txt).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/data/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600, s-maxage=3600" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
